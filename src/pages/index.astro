---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import InterstitialAd from "../components/InterstitialAd.astro";

import AdSectionVIP_1 from "../components/AdSectionVIP_1.astro";
import AdSectionVIP_2 from "../components/AdSectionVIP_2.astro";
import AdSection1 from "../components/AdSection1.astro";
import AdSection2 from "../components/AdSection2.astro";
import AdSection3 from "../components/AdSection3.astro";
import AdSection4 from "../components/AdSection4.astro";
import AdSection5 from "../components/AdSection5.astro";
import AdSection6 from "../components/AdSection6.astro";
import AdSection7 from "../components/AdSection7.astro";
import AdSection8 from "../components/AdSection8.astro";
import "../styles/mainstyle.css";
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP&display=swap"
            rel="stylesheet"
        />
        <meta
            name="description"
            content="沖縄でポーカーができるアミューズメント店舗やトーナメント情報を毎日更新。初心者や旅行者にも安心のポータルサイトOKIPOKA。"
        />
        <meta
            name="keywords"
            content="おきぽか,オキポカ,OKIPOKA,沖縄ポーカー,アミューズメントポーカー,ポーカー店舗,沖縄トーナメント,沖縄ポーカー大会"
        />
        <meta
            name="description"
            content="OKIPOKA（おきぽか）は、沖縄のアミューズメントポーカー大会・店舗情報・ブログを発信する総合サイトです。"
        />
        <title>OKIPOKA（おきぽか）| 沖縄ポーカー情報ポータル</title>
        <link rel="icon" href="/favicon.ico" type="image/x-icon" />
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-N4PCMT7BZB"></script>
        <script>
            // @ts-ignore
          window.dataLayer = window.dataLayer || [];
          // @ts-ignore
          function gtag(){dataLayer.push(arguments);}
          // @ts-ignore
          gtag('js', new Date());
          // @ts-ignore
          gtag('config', 'G-N4PCMT7BZB');
        </script>
    </head>

    <body>
        <Header />
        <InterstitialAd />
        <section class="video-hero">
            <video autoplay muted loop playsinline class="video-background">
                <source src="/images/okipoka.mp4" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        </section>

        <main>
            <div style="height: 0.5rem;"></div>
            <AdSectionVIP_1 />

            <section
                class="top-section"
                style="background-color: #ffffff; margin: 1rem 0; padding: 1.2rem 1rem; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd;"
            >
                <h2>お知らせ</h2>
                <ul id="notice-rotator" class="notice-list">
                    <li>お知らせ１</li>
                    <li>お知らせ２</li>
                    <li>お知らせ３</li>
                </ul>
            </section>

            <div style="height: 0.5rem;"></div>

            <AdSection1 />

            <section
                class="store-directory"
                style="background-color: #f9f9f9; padding: 2rem 1rem;"
            >
                <h2>沖縄ポーカースポット一覧</h2><br />
                <ul>
                    <li>
                        <a href="stores/Jack9">
                            <img
                                src="images/j9logo.jpg"
                                alt="Jack9"
                                class="store-icon"
                            />
                            <div>Jack9</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/UnderTheGun">
                            <img
                                src="images/underthegun.jpg"
                                alt="UnderTheGun"
                                class="store-icon"
                            />
                            <div>UnderTheGun</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/Rebarta">
                            <img
                                src="images/rebarta.png"
                                alt="icons"
                                class="store-icon"
                            />
                            <div>Re:Barta</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/BACKDOOR">
                            <img
                                src="images/backdoor.jpg"
                                alt="icons"
                                class="store-icon"
                            />
                            <div>BACKDOOR NAHA</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/JACKS">
                            <img
                                src="images/jacks.png"
                                alt="icons"
                                class="store-icon"
                            />
                            <div>JACKS</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/TOKISHIRAZU">
                            <img
                                src="images/tokishirazu.png"
                                alt="icons"
                                class="store-icon"
                            />
                            <div>TOKISHIRAZU</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/TheHand">
                            <img
                                src="images/hand.png"
                                alt="icons"
                                class="store-icon"
                            />
                            <div>Hand</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/GUTSHOT">
                            <img
                                src="images/gutshot.png"
                                alt="icons"
                                class="store-icon"
                            />
                            <div>GUTSHOT</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/Donk">
                            <img
                                src="images/donk.png"
                                alt="icons"
                                class="store-icon"
                            />
                            <div>DONK</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/Re.raise">
                            <img
                                src="images/Re.raise.png"
                                alt="icons"
                                class="store-icon"
                            />
                            <div>Re:Raise</div>
                        </a>
                    </li>
                    <li>
                        <a href="stores/nuts">
                            <img
                                src="images/Nuts.png"
                                alt="icons"
                                class="store-icon"
                            />
                            <div>NUTS</div>
                        </a>
                    </li>
                </ul>
            </section>

            <AdSection2 />
            <div style="height: 0.3rem;"></div>
            <AdSection3 />
            <!-- 今日のトーナメント -->
            <section
                class="top-section"
                style="background-color: #fffdf6; margin: 1rem 0; padding: 1.2rem 1rem; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd;"
            >
                <h2>本日のトーナメント情報</h2><br />
                <div
                    id="today-all-card"
                    class="card-list"
                    style="max-height: 300px; overflow-y: auto;"
                >
                </div>
                <a href="/tournaments/tournaments" class="top-link"
                    >詳細を見る →</a
                >
            </section>

            <AdSection4 />

            <!-- ブログ -->
            <section
                class="top-section"
                style="background-color: #f4f7fc; margin: 1rem 0; padding: 1.2rem 1rem; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd;"
            >
                <h2>Blog（準備中）</h2><br />
                <div class="card-list">
                    <div class="info-card">
                        <a href="/blog/post1">準備中</a>
                    </div>
                    <div class="info-card">
                        <a href="/blog/post2">準備中</a>
                    </div>
                </div>
                <a href="#" class="top-link">すべてのブログ記事 →</a>
            </section>

            <AdSectionVIP_2 />

            <!-- 寄稿者募集バナー -->
            <section
                class="top-section"
                style="text-align: center; margin: 1rem 0; padding: 1.2rem 1rem; background-color: #fef9f3; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd;"
            >
                <h2 style="margin-bottom: 0.5rem;">寄稿者募集中！</h2>
                <p style="margin-bottom: 1rem;">
                    Blogに掲載する記事を書いてくれる寄稿者の方を募集中です。ご興味ある方はぜひご連絡ください。
                </p>
                <a
                    href="/recruit"
                    class="top-link"
                    style="display: inline-block; padding: 0.5rem 1rem; background-color: #f60; color: white; text-decoration: none; border-radius: 4px;"
                >
                    募集の詳細を見る
                </a>
            </section>

            <AdSection5 />
            <div style="height: 0.3rem;"></div>
            <AdSection6 />

            <!-- グッズ紹介バナー -->
            <section
                class="top-section"
                style="text-align: center; margin: 1rem 0; padding: 1.2rem 1rem; background-color: #f3f9fe; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd;"
            >
                <h2 style="margin-bottom: 0.5rem;">SHOP（準備中）</h2>
                <p style="margin-bottom: 1rem;">
                    オリジナルグッズを今後展開予定です
                </p>
                <a
                    href="#"
                    class="top-link"
                    style="display: inline-block; padding: 0.5rem 1rem; background-color: #007acc; color: white; text-decoration: none; border-radius: 4px;"
                >
                    商品一覧（近日公開）
                </a>
            </section>

            <AdSection7 />
            <div style="height: 0.3rem;"></div>
            <AdSection8 />
            <div style="height: 0.3rem;"></div>
        </main>

        <Footer />
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const items = document.querySelectorAll(".notice-list li");
                let current = 0;

                if (items.length === 0) return;

                // 初期状態で最初の要素以外を非表示
                items.forEach((item, index) => {
                    // @ts-ignore
                    item.style.display = index === 0 ? "list-item" : "none";
                });

                setInterval(() => {
                    // @ts-ignore
                    items[current].style.display = "none";
                    current = (current + 1) % items.length;
                    // @ts-ignores
                    items[current].style.display = "list-item";
                }, 3000);
            });
        </script>
        <script src="/js/script.js" type="module"></script>
        <script src="/js/header.js" type="module"></script>
        <script src="/js/todayAll.js" type="module"></script>
    </body>
</html>
