---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import "../../styles/header_footer.css";
---

<html lang="ja">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-N4PCMT7BZB"
    ></script>
    <script>
      // @ts-ignore
      window.dataLayer = window.dataLayer || [];
      // @ts-ignore
      function gtag() {
        // @ts-ignore
        dataLayer.push(arguments);
      }
      // @ts-ignore
      gtag("js", new Date());
      // @ts-ignore
      gtag("config", "G-N4PCMT7BZB");
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>店舗新規登録 | OKIPOKA</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
  </head>
  <body>
    <Header />

    <main class="signup-page">
      <h1>店舗新規登録</h1>
      <form id="signup-form">
        <label for="email">メールアドレス</label>
        <input type="email" id="email" required />

        <label for="store-name">店舗名</label>
        <input type="text" id="store-name" required />

        <label for="password">パスワード（6文字以上）</label>
        <input type="password" id="password" required minlength="6" />

        <button type="submit">登録する</button>
        <p id="error-message" style="color:red; margin-top:1rem;"></p>
      </form>

      <p style="margin-top:2rem;">
        すでにアカウントをお持ちの方は <a href="/tournaments/login">ログイン</a>
      </p>
    </main>

    <Footer />
    <script src="/js/signup.js" type="module"></script>
    <script src="/js/header.js" type="module"></script>
  </body>
</html>
