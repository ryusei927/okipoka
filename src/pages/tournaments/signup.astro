---
import Header from "../../components/Header.astro";
import "../../styles/header_footer.css";
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>店舗新規登録 | OKIPOKA</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
  </head>
  <body>
    <Header />

    <main class="signup-page">
      <h1>店舗新規登録</h1>
      <form id="signup-form">
        <label for="email">メールアドレス</label>
        <input type="email" id="email" required />

        <label for="store-name">店舗名</label>
        <input type="text" id="store-name" required />

        <label for="password">パスワード（6文字以上）</label>
        <input type="password" id="password" required minlength="6" />

        <button type="submit">登録する</button>
        <p id="error-message" style="color:red; margin-top:1rem;"></p>
      </form>

      <p style="margin-top:2rem;">
        すでにアカウントをお持ちの方は <a href="/tournaments/login">ログイン</a>
      </p>
    </main>

    <script src="/js/signup.js" type="module"></script>
    <script src="/js/header.js" type="module"></script>
  </body>

  <style>
    body {
      font-family: "Noto Sans JP", sans-serif;
      background-color: #f0f2f5;
      color: #333;
      margin: 0;
      padding: 0;
    }

    .signup-page {
      max-width: 500px;
      margin: 3rem auto;
      background: white;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    h1 {
      text-align: center;
      margin-bottom: 2rem;
      font-size: 1.5rem;
      color: #222;
    }

    form label {
      display: block;
      margin: 1rem 0 0.25rem;
      font-weight: 500;
    }

    form input {
      width: 100%;
      padding: 0.5rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 1rem;
    }

    form button {
      margin-top: 1.5rem;
      width: 100%;
      padding: 0.75rem;
      background-color: #ff7f00;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      font-weight: bold;
      cursor: pointer;
    }

    form button:hover {
      background-color: #e67100;
    }

    #error-message {
      font-size: 0.9rem;
      text-align: center;
    }

    .signup-page p {
      text-align: center;
      font-size: 0.9rem;
    }

    .signup-page a {
      color: #ff7f00;
      text-decoration: none;
      font-weight: bold;
    }

    .signup-page a:hover {
      text-decoration: underline;
    }
  </style>
</html>
