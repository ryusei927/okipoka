---
import "../../styles/global.css";
import Analytics from '@vercel/analytics/astro';
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>トーナメント情報 | OKIPOKA</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <style>
      .date-picker-wrapper {
        text-align: center;
        margin: 2rem 0;
        padding: 1.5rem;
        background-color: var(--color-surface);
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      }
      #datePicker {
        padding: 0.5rem;
        border-radius: 4px;
        border: 1px solid var(--color-border);
        background-color: #fff;
        color: var(--color-text);
        font-size: 1rem;
      }
      #tournament-list {
        display: grid;
        gap: 1.5rem;
      }
    </style>
  </head>
  <body>

    <main class="container">
      <h1 style="text-align: center; margin-bottom: 1rem;">トーナメント情報</h1>
      <div class="date-picker-wrapper">
        <label for="datePicker" style="font-weight: bold; margin-right: 0.5em;">表示日を選択：</label>
        <input type="date" id="datePicker" />
      </div>
      <div id="tournament-list"></div>
    </main>

    <Analytics />
    <script src="/js/tournaments.js" type="module"></script>
  </body>
</html>