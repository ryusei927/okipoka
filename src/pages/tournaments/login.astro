---
import Header from "../../components/Header.astro";
import "../../styles/header_footer.css";
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>店舗ログイン | OKIPOKA</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
  </head>
  <body>
    <Header />

    <main class="login-page" style="max-width: 400px; margin: 3rem auto; background: #fff; padding: 2rem; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
      <h1 style="text-align: center; margin-bottom: 2rem;">店舗ログイン</h1>
      <form id="login-form" style="display: flex; flex-direction: column; gap: 1rem;">
        <div>
          <label for="email" style="display: block; font-weight: bold;">メールアドレス</label>
          <input type="email" id="email" required style="width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;" />
        </div>

        <div>
          <label for="password" style="display: block; font-weight: bold;">パスワード</label>
          <input type="password" id="password" required style="width: 100%; padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;" />
        </div>

        <button type="submit" style="padding: 0.75rem; background-color: #ff6600; color: #fff; font-weight: bold; border: none; border-radius: 4px; cursor: pointer;">ログイン</button>

        <p id="login-error" style="color: red; margin-top: 1rem;"></p>
      </form>
    </main>

    <script src="/js/login.js" type="module"></script>
    <script src="/js/header.js" type="module"></script>
  </body>
</html>
