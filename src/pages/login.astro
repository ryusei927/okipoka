---
// src/pages/login.astro
---
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>店舗様ログイン | OKIPOKA</title>
  <link rel="stylesheet" href="/styles/global.css">
  <style>
    /* レスポンシブ対応のスタイル */
    .auth-container {
      max-width: 600px;
      margin: 4rem auto;
      padding: 5rem 4rem;
      background: #fff;
      border-radius: 24px;
      box-shadow: 0 16px 48px rgba(0,0,0,0.12);
    }
    
    h1 {
      text-align: center;
      margin-bottom: 4rem;
      font-size: 3rem;
      color: #222;
      font-weight: 900;
    }
    
    form { 
      display: flex; 
      flex-direction: column; 
      gap: 2rem; 
    }
    
    input {
      padding: 2rem 2rem;
      border-radius: 16px;
      border: 3px solid #e1e5e9;
      font-size: 24px;
      transition: border-color 0.3s ease;
      min-height: 80px;
    }
    
    input:focus {
      outline: none;
      border-color: var(--color-primary);
    }
    
    button {
      padding: 2rem;
      background: linear-gradient(135deg, #ff7f00, #e66f00);
      color: #fff;
      border: none;
      border-radius: 16px;
      cursor: pointer;
      font-weight: 900;
      font-size: 24px;
      transition: transform 0.15s ease, filter 0.15s ease;
      box-shadow: 0 12px 28px rgba(255,127,0,0.4);
      min-height: 80px;
    }
    button:hover { filter: brightness(1.05); transform: translateY(-2px); }
    
    .message { 
      text-align: center; 
      margin-top: 1.5rem; 
      font-size: 18px;
    }
    
    .message.error { 
      color: #dc3545; 
      background-color: #f8d7da;
      padding: 1.5rem;
      border-radius: 12px;
      border: 2px solid #f5c6cb;
      font-size: 18px;
    }
    
    .message a { 
      text-decoration: underline; 
      cursor: pointer;
      color: var(--color-primary);
    }
    
    .message a:hover {
      color: #0056b3;
    }

    /* スマホ対応 */
    @media (max-width: 480px) {
      .auth-container {
        margin: 1rem;
        padding: 4rem 2.5rem;
        border-radius: 20px;
      }
      h1 { 
        font-size: 2.8rem; 
        margin-bottom: 3rem; 
        font-weight: 900;
      }
      input { 
        font-size: 22px; 
        min-height: 76px; 
        padding: 1.8rem;
      }
      button { 
        font-size: 24px; 
        padding: 2rem; 
        min-height: 80px;
      }
      form {
        gap: 1.8rem;
      }
      .message {
        font-size: 17px;
      }
      .message.error {
        font-size: 17px;
        padding: 1.2rem;
      }
    }
    
    /* より小さい画面用 */
    @media (max-width: 360px) {
      .auth-container {
        margin: 0.5rem;
        padding: 3rem 2rem;
      }
      
      h1 {
        font-size: 2.4rem;
        margin-bottom: 2.5rem;
      }
      
      input {
        padding: 1.6rem;
        font-size: 20px;
        min-height: 72px;
      }
      
      button {
        font-size: 22px;
        padding: 1.8rem;
        min-height: 76px;
      }
    }
  </style>
</head>
<body>
  <main class="auth-container">
    <h1>OKIPOKA ログイン</h1>
    <form id="login-form">
      <input type="email" id="email" placeholder="メールアドレス" required />
      <input type="password" id="password" placeholder="パスワード" required />
      <button type="submit">ログイン</button>
    </form>
    <p id="message" class="message error" style="display:none;"></p>
    <p class="message"><a id="forgot-password-link">パスワードをお忘れですか？</a></p>
  </main>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
    // sendPasswordResetEmail を追加でインポート
    import { getAuth, signInWithEmailAndPassword, sendPasswordResetEmail } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-auth.js";

    // Your web app's Firebase configuration
    const firebaseConfig = {
      apiKey: "AIzaSyB8q6HLBGi_DWmrvkGCaWK_B6EeP7D--wo",
      authDomain: "okipoka-v2.firebaseapp.com",
      projectId: "okipoka-v2",
      storageBucket: "okipoka-v2.firebasestorage.app",
      messagingSenderId: "6256473895",
      appId: "1:6256473895:web:df644eaac108a218d59b02",
      measurementId: "G-JLC2569WN3"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    const form = document.getElementById('login-form');
    const messageEl = document.getElementById('message');

    // ログインフォームの処理
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      messageEl.style.display = 'none';

      try {
        await signInWithEmailAndPassword(auth, email, password);
        window.location.href = '/dashboard';
      } catch (error) {
        console.error("ログイン失敗:", error);
        messageEl.textContent = 'メールアドレスまたはパスワードが違います。';
        messageEl.style.display = 'block';
      }
    });

    // ★★★ ここから追加 ★★★
    // パスワードリセットの処理
    const forgotPasswordLink = document.getElementById('forgot-password-link');
    forgotPasswordLink.addEventListener('click', async (e) => {
        e.preventDefault();
        const email = document.getElementById('email').value;

        if (!email) {
            messageEl.textContent = 'パスワードをリセットするには、まずメールアドレスを入力してください。';
            messageEl.style.display = 'block';
            return;
        }

        try {
            await sendPasswordResetEmail(auth, email);
            alert('パスワードリセット用のメールを送信しました。受信トレイをご確認ください。');
            messageEl.style.display = 'none';
        } catch (error) {
            console.error("リセットメール送信失敗:", error);
            messageEl.textContent = 'メールの送信に失敗しました。メールアドレスが正しいかご確認ください。';
            messageEl.style.display = 'block';
        }
    });
    // ★★★ ここまで追加 ★★★

  </script>
</body>
</html>