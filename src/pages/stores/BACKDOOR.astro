---
import Analytics from "@vercel/analytics/astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import InterstitialAd from "../../components/InterstitialAd.astro";
import AdSection1 from "../../components/AdSection1.astro";
import AdSection2 from "../../components/AdSection2.astro";
import AdSection3 from "../../components/AdSection3.astro";
import AdSection4 from "../../components/AdSection4.astro";
import AdSection5 from "../../components/AdSection5.astro";
import AdSection6 from "../../components/AdSection6.astro";
import AdSection7 from "../../components/AdSection7.astro";
import AdSection8 from "../../components/AdSection8.astro";

import "../../styles/stores.css";
---

<!doctype html>
<html lang="ja"></html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>OKIPOKA|BACKDOOR</title>
  <link rel="icon" href="/favicon.ico" type="image/x-icon" />
</head>

<Header />
<InterstitialAd />

<section class="store-detail" style="max-width: 720px; margin: 0 auto;">
  <div class="store-header center-align">
    <h2>BACKDOOR</h2><br />
    <img src="/images/backdoor.jpg" class="store-image" />
  </div>
  <style>
    .store-header {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .store-image {
      display: block;
      width: 350px;
      height: 350px;
      aspect-ratio: 1 / 1;
      object-fit: cover;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
  </style>

  <div class="store-intro">
    <p>
      テキスト<br />
      テキスト
    </p>
  </div>
  <AdSection1 />
  <style>
    .store-intro {
      margin: 2.5rem 0 2rem 0;
      padding: 0 0 1.5rem 0;
      font-size: 1.05rem;
      line-height: 1.8;
      color: #333;
      font-family: system-ui, Helvetica, Arial, sans-serif;
      /* border-left removed */
    }

    .store-intro h2 {
      font-size: 1.3rem;
      color: #e67e22;
      margin-bottom: 1rem;
    }

    .store-intro p {
      margin: 0 0 1rem;
    }
  </style>

  <!-- リングチップ料金プラン セクション ここから -->
  <div class="store-section">
    <h2>リングチップ料金プラン</h2>
    <div class="chip-plan-grid">
      <div class="chip-card">
        <h3>初回エントリー</h3>
        <ul>
          <li>¥3,000（500BD$）</li>
          <li>¥4,500（1,000BD$）</li>
          <li>¥6,000（1,500BD$）</li>
          <li>¥10,000（3,000BD$）</li>
          <li>¥15,000（5,000BD$）</li>
        </ul>
      </div>
      <div class="chip-card">
        <h3>リバイ（2回目以降）</h3>
        <ul>
          <li>¥2,500（500BD$）</li>
        </ul>
      </div>
      <div class="chip-card">
        <h3>引き出し</h3>
        <ul>
          <li>¥1,000（500BD$）</li>
        </ul>
      </div>
    </div>
  </div>
  <style>
    .chip-plan-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1.5rem;
      margin-top: 1rem;
    }
    .chip-card {
      background-color: #fffdf9; /* 明るい背景に戻す */
      border-left: 5px solid #e67e22; /* アクセントをオレンジ系に */
      border-radius: 10px;
      padding: 1rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }
    .chip-card h3 {
      margin: 0 0 0.5rem;
      font-size: 1.2rem;
      color: #e67e22; /* タイトルもオレンジ系に */
    }
    .chip-card ul {
      padding-left: 1.2rem;
      margin: 0;
      list-style: disc;
      font-size: 0.95rem;
      color: #444; /* 通常の文字色に戻す */
    }
  </style>
  <!-- リングチップ料金プラン セクション ここまで -->
  <AdSection2 />

  <!-- 店舗写真セクション ここから -->
  <div class="store-section store-gallery">
    <h2>店舗写真</h2>
    <div class="gallery-grid">
      <img src="/images/sample.png" />
      <img src="/images/sample.png" />
      <img src="/images/sample.png" />
      <img src="/images/sample.png" />
    </div>
  </div>
  <style>
    .store-gallery .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
    }
    .store-gallery .gallery-grid img {
      width: 100%;
      height: auto;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
  <!-- 店舗写真セクション ここまで -->

  <div class="store-section">
    <h2>店舗情報</h2>
    <dl>
      <dt>店舗名</dt>
      <dd>BACKDOOR NAHA</dd>
      <dt>所在地</dt>
      <dd>〒900-0015 沖縄県那覇市久茂地３丁目３−２０ Mビル国際通り 7階</dd>
      <dt>営業時間</dt>
      <dd>19:00〜</dd>
    </dl>
  </div>

  <div class="store-section">
    <h2>関連リンク</h2>
    <ul>
      <li>
        <a
          href="https://www.instagram.com/naha_backdoor?utm_source=ig_web_button_share_sheet&igsh=MWN0aHRzMjB1bDR2aw%3D%3D"
          target="_blank"
          rel="noopener"
          ><img src="/images/insta.png" class="icon" /> 公式Instagram</a
        >
      </li>
            <li>
        <a
          href="https://naha.backdoor.casino/"
          target="_blank"
          rel="noopener">公式ホームページ</a
        >
      </li>
      <li>
        <a
          href="https://www.google.com/maps/place/%E3%80%92900-0015+%E6%B2%96%E7%B8%84%E7%9C%8C%E9%82%A3%E8%A6%87%E5%B8%82%E4%B9%85%E8%8C%82%E5%9C%B0%EF%BC%93%E4%B8%81%E7%9B%AE%EF%BC%93%E2%88%92%EF%BC%92%EF%BC%90+M%E3%83%93%E3%83%AB%E9%82%A3%E8%A6%87%E5%9B%BD%E9%9A%9B%E9%80%9A%E3%82%8A+7%E9%9A%8E/@26.2144118,127.6795757,17z/data=!3m1!4b1!4m5!3m4!1s0x34e569763335153f:0x6a94a1079f9ebbaa!8m2!3d26.2144118!4d127.6821506?entry=tts&g_ep=EgoyMDI1MDcwOS4wIPu8ASoASAFQAw%3D%3D&skid=6591ac4c-8e98-4362-a616-78532aca4e74"
          target="_blank"
          rel="noopener">Googleマップで見る</a
        >
      </li>
    </ul>
  </div><br />
  <AdSection3 />
</section>

<Footer />
<Analytics />
<script src="/js/header.js" type="module"></script>

<style>
  .icon {
    width: 20px;
    height: 20px;
    object-fit: cover;
    margin-right: 0.4em;
    vertical-align: middle;
    border-radius: 50%;
  }
  .store-section ul {
    list-style: none;
    padding-left: 0;
  }
</style>
