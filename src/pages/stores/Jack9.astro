---
import Analytics from "@vercel/analytics/astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import InterstitialAd from "../../components/InterstitialAd.astro";
import AdSection1 from "../../components/AdSection1.astro";
import AdSection2 from "../../components/AdSection2.astro";
import AdSection3 from "../../components/AdSection3.astro";
import AdSection4 from "../../components/AdSection4.astro";
import AdSection5 from "../../components/AdSection5.astro";
import AdSection6 from "../../components/AdSection6.astro";
import AdSection7 from "../../components/AdSection7.astro";
import AdSection8 from "../../components/AdSection8.astro";

import "../../styles/stores.css";
---

<!doctype html>
<html lang="ja"></html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>OKIPOKA|Jack9</title>
  <link rel="icon" href="/favicon.ico" type="image/x-icon" />
</head>

<Header />
<InterstitialAd />

<section class="store-detail" style="max-width: 720px; margin: 0 auto;">
  <div class="store-header center-align">
    <h2>Jack9</h2><br />
    <img src="/images/j9logo.jpg" class="store-image" />
  </div>
  <style>
    .store-header {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .store-image {
      display: block;
      width: 350px;
      height: 350px;
      aspect-ratio: 1 / 1;
      object-fit: cover;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
  </style>

  <div class="store-intro">
    <p>
      テキスト<br />
      テキスト
    </p>
  </div>
  <AdSection1 />
  <style>
    .store-intro {
      margin: 2.5rem 0 2rem 0;
      padding: 0 0 1.5rem 0;
      font-size: 1.05rem;
      line-height: 1.8;
      color: #333;
      font-family: system-ui, Helvetica, Arial, sans-serif;
      /* border-left removed */
    }

    .store-intro h2 {
      font-size: 1.3rem;
      color: #e67e22;
      margin-bottom: 1rem;
    }

    .store-intro p {
      margin: 0 0 1rem;
    }
  </style>

  <!-- リングチップ料金プラン セクション ここから -->
  <div class="store-section">
    <h2>リングチップ料金プラン</h2>
    <div class="chip-plan-grid">
      <div class="chip-card">
        <h3>カメプラン（100点）</h3>
        <p>¥2,200（1ドリンク込み）</p>
        <p>どんなゲームか知りたい！とりあえずオタメシしたい方向け</p>
      </div>
      <div class="chip-card">
        <h3>シーサープラン（300点）</h3>
        <p>¥4,300（100BB・1ドリンク込み）</p>
        <p>ゲームを知っている・本格的に覚えていきたい方向け</p>
      </div>
      <div class="chip-card">
        <h3>首里城プラン（600点）</h3>
        <p>¥6,400（300BB・1ドリンク込み）</p>
        <p>長く遊びたい！アグレッション高めな方や上級者向け</p>
      </div>
    </div>
  </div>
  <style>
    .chip-plan-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.5rem;
      margin-top: 1rem;
    }
    .chip-card {
      background-color: #fff;
      border-left: 5px solid #e67e22;
      border-radius: 10px;
      padding: 1rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }
    .chip-card h3 {
      margin: 0 0 0.5rem;
      font-size: 1.1rem;
      color: #e67e22;
    }
    .chip-card p {
      margin: 0.2rem 0;
      font-size: 0.95rem;
      color: #333;
    }
  </style>
  <!-- リングチップ料金プラン セクション ここまで -->
  <AdSection2 />

  <!-- 店舗写真セクション ここから -->
  <div class="store-section store-gallery">
    <h2>店舗写真</h2>
    <div class="gallery-grid">
      <img src="/images/j9image1.jpg" />
      <img src="/images/j9image2.png" />
      <img src="/images/j9image3.jpg" />
      <img src="/images/j9image4.jpg" />
    </div>
  </div>
  <style>
    .store-gallery .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
    }
    .store-gallery .gallery-grid img {
      width: 100%;
      height: auto;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
  <!-- 店舗写真セクション ここまで -->

  <div class="store-section">
    <h2>店舗情報</h2>
    <dl>
      <dt>店舗名</dt>
      <dd>アミューズメントバー JACK9</dd>
      <dt>所在地</dt>
      <dd>〒902-0067 沖縄県那覇市安里１丁目４−１４（ふくよしビル ２階）</dd>
      <dt>営業時間</dt>
      <dd>19:00〜3:00</dd>
    </dl>
  </div>

  <div class="store-section">
    <h2>関連リンク</h2>
    <ul>
      <li>
        <a
          href="https://www.instagram.com/jack9_amusement?utm_source=ig_web_button_share_sheet&igsh=MW4wbjh4b2Jjb2Y2NA%3D%3D"
          target="_blank"
          rel="noopener"
          ><img src="/images/insta.png" class="icon" /> 公式Instagram</a
        >
      </li>

      <li>
        <a
          href="https://www.google.com/maps/place/%E3%82%A2%E3%83%9F%E3%83%A5%E3%83%BC%E3%82%BA%E3%83%A1%E3%83%B3%E3%83%88%E3%83%90%E3%83%BC+JACK9/@26.2189448,127.6922752,17z/data=!3m1!5s0x34e569639c0908c1:0x565404b787982471!4m7!3m6!1s0x34e5695b3c1ec7e5:0xb23f31df0309408!8m2!3d26.2189209!4d127.6948361!15sCljjgJI5MDItMDA2NyDmspbnuITnnIzpgqPopofluILlronph4zvvJHkuIHnm67vvJTiiJLvvJHvvJTvvIjjgbXjgY_jgojjgZfjg5Pjg6sg77yS6ZqO77yJWlgiVuOAkiA5MDIgMDA2NyDmspbnuIQg55yMIOmCo-imhyDluIIg5a6J6YeMIDEg5LiB55uuIDQg4oiSIDE0IOOBteOBj-OCiCDjgZcg44OT44OrIDIg6ZqOkgEDYmFyqgGIARABKgciA-OAkigIMh8QASIbwKHjs3_JfmhRD28t60z2LQT58rD827echfNyMloQAiJW44CSIDkwMiAwMDY3IOaylue4hCDnnIwg6YKj6KaHIOW4giDlronph4wgMSDkuIHnm64gNCDiiJIgMTQg44G144GP44KIIOOBlyDjg5Pjg6sgMiDpmo7gAQA!16s%2Fg%2F11rlsgb9p8?entry=tts&g_ep=EgoyMDI1MDcwOS4wIPu8ASoASAFQAw%3D%3D&skid=1330cc9d-cb16-4c38-b4e2-09173e50138f"
          target="_blank"
          rel="noopener">Googleマップで見る</a
        >
      </li>
    </ul>
  </div><br />
  <AdSection3 />
</section>

<Footer />
<Analytics />
<script src="/js/header.js" type="module"></script>

<style>
  .icon {
    width: 20px;
    height: 20px;
    object-fit: cover;
    margin-right: 0.4em;
    vertical-align: middle;
    border-radius: 50%;
  }
  .store-section ul {
    list-style: none;
    padding-left: 0;
  }
</style>
