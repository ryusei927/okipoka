---
import Analytics from '@vercel/analytics/astro';
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import InterstitialAd from "../../components/InterstitialAd.astro";
import AdSection1 from "../../components/AdSection1.astro";
import AdSection2 from "../../components/AdSection2.astro";
import AdSection3 from "../../components/AdSection3.astro";
import AdSection4 from "../../components/AdSection4.astro";
import AdSection5 from "../../components/AdSection5.astro";
import AdSection6 from "../../components/AdSection6.astro";
import AdSection7 from "../../components/AdSection7.astro";
import AdSection8 from "../../components/AdSection8.astro";

import "../../styles/stores.css";
---

<!doctype html>
<html lang="ja"></html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>OKIPOKA|BIG SLICK</title>
  <link rel="icon" href="/favicon.ico" type="image/x-icon" />
</head>

<Header />
<InterstitialAd />

<section class="store-detail" style="max-width: 720px; margin: 0 auto;">
  <div class="store-header center-align">
    <h2>BIG SLICK</h2><br />
    <img src="/images/bigslick.png" class="store-image" />
  </div>
  <style>
    .store-header {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .store-image {
      display: block;
      width: 350px;
      height: 350px;
      aspect-ratio: 1 / 1;
      object-fit: cover;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
  </style>

  <div class="store-intro">
    <p>
      テキスト<br />
      テキスト
    </p>
  </div>
  <AdSection1 />
  <style>
    .store-intro {
      margin: 2.5rem 0 2rem 0;
      padding: 0 0 1.5rem 0;
      font-size: 1.05rem;
      line-height: 1.8;
      color: #333;
      font-family: system-ui, Helvetica, Arial, sans-serif;
      /* border-left removed */
    }

    .store-intro h2 {
      font-size: 1.3rem;
      color: #e67e22;
      margin-bottom: 1rem;
    }

    .store-intro p {
      margin: 0 0 1rem;
    }
  </style>

  <!-- リングチップ料金プラン セクション ここから -->
  <div class="store-section">
    <h2>リングチップ料金プラン</h2>
    <p>調査中</p>
  </div>
  <style>
    .chip-plan-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1.5rem;
      margin-top: 1rem;
    }
    .chip-card {
      background-color: #fffdf9; /* 明るい背景に戻す */
      border-left: 5px solid #e67e22; /* アクセントをオレンジ系に */
      border-radius: 10px;
      padding: 1rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }
    .chip-card h3 {
      margin: 0 0 0.5rem;
      font-size: 1.2rem;
      color: #e67e22; /* タイトルもオレンジ系に */
    }
    .chip-card ul {
      padding-left: 1.2rem;
      margin: 0;
      list-style: disc;
      font-size: 0.95rem;
      color: #444; /* 通常の文字色に戻す */
    }
  </style>
  <!-- リングチップ料金プラン セクション ここまで -->
  <br><AdSection2 />

  <!-- 店舗写真セクション ここから -->
  <div class="store-section store-gallery">
    <h2>店舗写真(準備中)</h2>
    <div class="gallery-grid">
      <img src="/images/sample.png" />
      <img src="/images/sample.png" />
      <img src="/images/sample.png" />
      <img src="/images/sample.png" />
    </div>
  </div>
  <style>
    .store-gallery .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
    }
    .store-gallery .gallery-grid img {
      width: 100%;
      height: auto;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
  <!-- 店舗写真セクション ここまで -->

  <div class="store-section">
    <h2>店舗情報</h2>
    <dl>
      <dt>店舗名</dt>
      <dd>BAR BIG SLICK</dd>
      <dt>所在地</dt>
      <dd>〒902-0064 沖縄県那覇市寄宮３丁目１８−４６ 寄宮アパート1階</dd>
      <dt>営業時間</dt>
      <dd>調査中</dd>
    </dl>
  </div>

  <div class="store-section">
    <h2>関連リンク</h2>
    <ul>
      <li>
        <a
          href="https://www.instagram.com/bar_bigslick?utm_source=ig_web_button_share_sheet&igsh=Nnc2ZHlheTNkcXIx"
          target="_blank"
          rel="noopener"
          ><img src="/images/insta.png" class="icon" /> 公式Instagram</a
        >
      </li>
      <li>
        <a
          href="https://maps.app.goo.gl/7fydpKD6HacyHAwy6"
          target="_blank"
          rel="noopener">Googleマップで見る</a
        >
      </li>
    </ul>
  </div><br />
  <AdSection3 />
</section>

<Footer />
<Analytics />
<script src="/js/header.js" type="module"></script>

<style>
  .icon {
    width: 20px;
    height: 20px;
    object-fit: cover;
    margin-right: 0.4em;
    vertical-align: middle;
    border-radius: 50%;
  }
  .store-section ul {
    list-style: none;
    padding-left: 0;
  }
</style>
