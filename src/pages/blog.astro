---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import InterstitialAd from "../components/InterstitialAd.astro";
import Article1 from "../components/blog_article/article_1.astro";
import "../styles/blog.css";
import adList from "../assets/adList.json";
const allStandard = adList.standard1.concat(
  adList.standard2,
  adList.standard3,
  adList.standard4,
  adList.standard5,
  adList.standard6,
  adList.standard7,
  adList.standard8,
);
const blogAd = allStandard[Math.floor(Math.random() * allStandard.length)];
const blogAd2 = allStandard[Math.floor(Math.random() * allStandard.length)];
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="沖縄でポーカーができるアミューズメント店舗やトーナメント情報を毎日更新。初心者や旅行者にも安心のポータルサイトOKIPOKA。"
    />
    <title>ブログ | OKIPOKA</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
  </head>

  <body>
    <Header />
    <InterstitialAd />

    <div
      class="standard-ad-wrapper"
      style="text-align: center; margin: 1.5rem 0;"
    >
      <a href={blogAd.link} target="_blank" rel="noopener noreferrer">
        <img
          src={blogAd.image}
          alt="スポンサー広告"
          style="max-width: 650px; width: 100%; height: auto;"
        />
      </a>
    </div>

    <section class="blog-search-bar" style="padding: 1rem; text-align: center;">
      <input
        type="text"
        id="blog-search-input"
        placeholder="キーワードや著者名で検索"
        style="padding: 0.5rem; width: 60%; max-width: 400px; font-size: 1rem;"
      />
      <button
        id="blog-search-button"
        style="padding: 0.5rem 1rem; margin-left: 0.5rem; font-size: 1rem;"
        >検索</button
      >
      <div style="margin-top: 1rem;">
        <button class="filter-button" data-filter="all">すべて</button>
        <button class="filter-button" data-filter="free">無料</button>
        <button class="filter-button" data-filter="paid">有料</button>
      </div>
    </section>
    <main class="blog-container">
      <div id="blog-list">
        <section class="blog-thumbnail-grid">
          <Article1 />
        </section>
      </div>
      <div class="pagination"></div>

      <div
        class="standard-ad-wrapper"
        style="text-align: center; margin: 1.5rem 0;"
      >
        <a href={blogAd2.link} target="_blank" rel="noopener noreferrer">
          <img
            src={blogAd2.image}
            alt="スポンサー広告"
            style="max-width: 650px; width: 100%; height: auto;"
          />
        </a>
      </div>
    </main>

    <Footer />
    <script src="/js/blog.js" type="module"></script>
    <script src="/js/blog-search.js" type="module"></script>
    <script src="/js/header.js" type="module"></script>
  </body>
</html>
