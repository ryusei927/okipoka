];
const selectedAd = ads[Math.floor(Math.random() * ads.length)];
---

<div id="ad-popup" class="ad-overlay hidden">
  <div class="ad-box">
    <div class="ad-image-wrapper">
      <span class="ad-label">広告</span>
      <a href={selectedAd.link} target="_blank" rel="noopener">
        <img src={selectedAd.image} alt={selectedAd.alt} class="ad-image" />
      </a>
    </div>
    <button id="ad-close" class="ad-close">✖︎</button>
  </div>
</div>

<style>
  .ad-overlay {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  .ad-box {
    background: #fff;
    border-radius: 12px;
    padding: 1rem;
    max-width: 90%;
    max-height: 90%;
    box-shadow: 0 8px 16px rgba(0,0,0,0.3);
    position: relative;
  }

  .ad-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .ad-close {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: transparent;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #555;
  }

  .hidden {
    display: none;
  }

.ad-image-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ad-label {
  margin-bottom: 0.5rem;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 0.75rem;
  padding: 2px 8px;
  border-radius: 4px;
}

</style>

<script is:inline>
  const shownAt = sessionStorage.getItem('ad-shown-at');
  const now = Date.now();

  if (!shownAt || now - shownAt > 1 * 60 * 1000) {
    window.addEventListener('DOMContentLoaded', () => {
      const popup = document.getElementById('ad-popup');
      popup?.classList.remove('hidden');
      sessionStorage.setItem('ad-shown-at', now);
    });
  }

  window.addEventListener('DOMContentLoaded', () => {
    document.getElementById('ad-close')?.addEventListener('click', () => {
      document.getElementById('ad-popup')?.classList.add('hidden');
    });
  });
</script>