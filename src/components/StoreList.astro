---
import stores from "../data/stores.json";

type Store = typeof stores[number];
type GroupedStores = { [area: string]: Store[] };

const groupedStores: GroupedStores = stores.reduce((acc, store) => {
  if (!acc[store.area]) {
    acc[store.area] = [];
  }
  acc[store.area].push(store);
  return acc;
}, {} as GroupedStores);
---

<div class="store-list-container">
  {Object.entries(groupedStores).map(([area, stores]) => (
    <section class="store-area">
      <h2 class="area-title">{area}</h2>
      <div class="store-list">
        {stores.map(store => (
          <a href={`/stores/${store.id}`} class="store-card">
            <img src={store.logo} alt={`${store.name} Logo`} 
                 onerror="this.onerror=null; this.src='/images/sample.png';" />
            <h3>{store.name}</h3>
          </a>
        ))}
      </div>
    </section>
  ))}
</div>

<style>
  .area-title {
    font-size: 1rem;
    font-weight: 600;
    color: #666;
    margin: 2rem 0 0.5rem;
    border-left: 3px solid var(--color-primary);
    padding-left: 0.5rem;
  }
  .store-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .store-card {
    display: flex;
    align-items: center;
    border: none;
    background: #fafafa;
    border-radius: 6px;
    padding: 14px 16px;
    text-decoration: none;
    color: inherit;
    transition: background 0.2s ease;
  }
  .store-card:hover {
    background: #f0f0f0;
  }
  .store-card img {
    width: 48px;
    height: 48px;
    object-fit: contain;
    margin-right: 12px;
    background: #fff;
    border-radius: 50%;
    border: 1px solid #eee;
    padding: 4px;
  }
  .store-card h3 {
    font-size: 1rem;
    color: #333;
    margin: 0;
    text-align: left;
  }
  .store-card.hidden {
    display: none;
  }
</style>